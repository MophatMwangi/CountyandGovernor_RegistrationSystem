<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:id="@+id/row_countyCard"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="County Name"
                 android:textSize="18sp"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 />

             <TextView
                 android:id="@+id/countyname_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="County Name"
                 android:fontFamily="serif"
                 android:textSize="18sp"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/black"
                 style="bold"
                 />




         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/pop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                style="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/area_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                style="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of town"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/not_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="towns"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                style="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County Number"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/county_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County Number"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                style="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Schools"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/nos_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schools"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                style="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Hospital"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/noh_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospitals"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                style="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County Governor"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cgovernor_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County "
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                style="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                style="?attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/baseline_delete_24"

                />

            <com.google.android.material.button.MaterialButton
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/baseline_edit_24" />

        </LinearLayout>
     </LinearLayout>


</androidx.cardview.widget.CardView>