<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.Reports">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Reports"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Report from the county module"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/lightGray"
                android:gravity="center"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                >


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Governors"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginBottom="25dp"
                        android:id="@+id/governors_txt"
                        style="bold"
                        android:layout_marginLeft="140dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_person" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:backgroundTint="@color/lightGray"
                >


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Counties"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginBottom="25dp"
                        android:id="@+id/counties_txt"
                        style="bold"
                        android:layout_marginLeft="140dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_location_city" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:backgroundTint="@color/lightGray"
                >


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Hospitals"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/hospitals_txt"
                        style="bold"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="140dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_local_hospital" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:gravity="center"
                android:backgroundTint="@color/lightGray"
           >


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" schools"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginBottom="25dp"
                        android:id="@+id/schools_txt"
                        style="bold"
                        android:layout_marginLeft="140dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_school" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:gravity="center"
                android:backgroundTint="@color/lightGray">


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Population"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/populations_txt"
                        style="bold"
                        android:layout_marginBottom="25dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="140dp"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_person" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/lightGray">


                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Area"
                        android:layout_marginTop="35dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/areas_txt"
                        style="bold"
                        android:layout_marginBottom="25dp"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="140dp"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_person" />


            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Population Chart"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:gravity="center"
                android:backgroundTint="@color/lightGray">

                      <com.github.mikephil.charting.charts.LineChart
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/Lchart"
                          android:layout_margin="10dp"
                          />



            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Buble Chart"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                android:gravity="center"
                android:backgroundTint="@color/lightGray">

                <com.github.mikephil.charting.charts.BubbleChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Bchart"
                    android:layout_margin="10dp"
                    />



            </androidx.cardview.widget.CardView>


        </LinearLayout>





    </ScrollView>




</LinearLayout>